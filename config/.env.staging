# Staging Environment Variables
# MANAGED BY CI/CD - DO NOT EDIT MANUALLY

ENV=staging

# Database
POSTGRES_USER=waooaw
POSTGRES_PASSWORD=${STAGING_POSTGRES_PASSWORD}
POSTGRES_DB=waooaw_staging
DATABASE_URL=postgresql://waooaw:${STAGING_POSTGRES_PASSWORD}@postgres:5432/waooaw_staging

# Redis
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}
REDIS_URL=redis://:${STAGING_REDIS_PASSWORD}@redis:6379/0

# Application
SECRET_KEY=${STAGING_SECRET_KEY}
DEBUG=false
LOG_LEVEL=INFO

# GitHub
GITHUB_TOKEN=${STAGING_GITHUB_TOKEN}
GITHUB_REPO=dlai-sd/WAOOAW
GITHUB_WEBHOOK_SECRET=${STAGING_GITHUB_WEBHOOK_SECRET}

# Anthropic
ANTHROPIC_API_KEY=${STAGING_ANTHROPIC_API_KEY}

# Agent Configuration
AGENT_CHECK_INTERVAL=300
AGENT_MAX_ACTIONS_PER_DAY=200

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=${STAGING_GRAFANA_PASSWORD}

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/staging-cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/staging-key.pem

# Alerts
SLACK_WEBHOOK_URL=${STAGING_SLACK_WEBHOOK_URL}

# Performance
REQUEST_TIMEOUT=30
WORKER_COUNT=2
