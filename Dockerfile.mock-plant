FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir fastapi uvicorn[standard]

# Copy mock service
COPY src/gateway/tests/mock_plant_service.py /app/mock_plant_service.py

# Expose port
EXPOSE 8001

# Run the service
CMD ["python", "-m", "uvicorn", "mock_plant_service:app", "--host", "0.0.0.0", "--port", "8001"]
