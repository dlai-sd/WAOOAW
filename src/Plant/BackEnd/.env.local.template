# WAOOAW Plant - Codespace/Local Development Environment
# Environment: local (Codespace or developer laptop)
# Database: Docker PostgreSQL container (localhost:5432)

# Application
APP_NAME="WAOOAW Plant Phase API (Local)"
APP_VERSION="0.1.0"
ENVIRONMENT="local"
DEBUG=true
LOG_LEVEL="DEBUG"

# Database - Local Docker PostgreSQL
DATABASE_URL="postgresql://plant_dev:dev_password@localhost:5432/plant_local"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
DATABASE_ECHO=true

# Redis - Local Docker Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_TTL_SECONDS=3600  # 1 hour for faster testing

# ML Service - Local (or mock)
ML_SERVICE_URL="http://localhost:8005"
ML_SERVICE_TIMEOUT_MS=200  # More lenient for local
ML_EMBEDDING_DIMENSION=384
ML_MODEL="MiniLM-384"

# Security - Development keys (NOT for production)
SECRET_KEY="local-dev-secret-key-change-me"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Cryptography
RSA_KEY_SIZE=2048  # Smaller for faster local testing
HASH_ALGORITHM="SHA256"

# Performance SLAs - Relaxed for local
VALIDATE_SELF_SLA_MS=50
EVOLVE_SLA_MS=20
VERIFY_AMENDMENT_SLA_MS=100
PGVECTOR_SEARCH_SLA_MS=1000
SCHEMA_MIGRATION_SLA_LATENCY_INCREASE_PERCENT=20

# Cost Governance - Disabled for local
EMBEDDING_QUALITY_STABILITY_THRESHOLD=0.80
EMBEDDING_QUALITY_CHECK_SCHEDULE="disabled"

# API
API_V1_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://*.github.dev"]

# Google Cloud - Not used in local
GCP_PROJECT_ID=""
GCP_REGION=""
